{
  "name": "keel",
  "version": "0.0.1",
  "private": true,
  "description": "Monorepo template with Next.js, Go API, and shared packages",
  "workspaces": [
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "generate": "turbo generate",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^2.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "backend/**/*.go": [
      "gofmt -w"
    ]
  },
  "packageManager": "bun@1.0.0",
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}
