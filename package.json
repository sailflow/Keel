{
  "name": "keel",
  "version": "0.0.1",
  "private": true,
  "description": "Monorepo template with Next.js, Go API, and shared packages",
  "workspaces": [
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "generate": "turbo generate"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.0"
  },
  "packageManager": "bun@1.0.0",
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}